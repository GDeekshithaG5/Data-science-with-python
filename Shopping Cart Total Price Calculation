def calculate_total_price(price, quantity, tax_rate):
 subtotal = price * quantity
 tax = subtotal * (tax_rate / 100)
 total = subtotal + tax
 return total

price_per_item = 50
quantity = 3
tax_rate = 8
total_price = calculate_total_price(price_per_item, quantity, 
tax_rate)
print(f"Total Price: ${total_price:.2f}")
