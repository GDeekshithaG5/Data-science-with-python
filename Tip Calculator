def calculate_tip(total_bill, tip_percentage):
 tip = total_bill * (tip_percentage / 100)
 total_with_tip = total_bill + tip
 return tip, total_with_tip

total_bill = 100
tip_percentage = 15
tip, total_with_tip = calculate_tip(total_bill, tip_percentage)
print(f"Tip: ${tip:.2f}, Total Amount: ${total_with_tip:.2f}")
